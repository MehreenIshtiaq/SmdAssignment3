<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat">

    <TextView
        android:id="@+id/txtChat"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Chat"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        ></TextView>

    <TextView
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider"
        android:layout_below="@id/txtChat"></TextView>

    <RelativeLayout
        android:id="@+id/parentRelative2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/txtChat"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <ImageView
            android:id="@+id/image1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/girl_profile_modified"
            ></ImageView>
        <LinearLayout
            android:id="@+id/MakennaLinearLayout"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_toRightOf="@id/image1"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/nametxt1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Makenna Dias"
                android:paddingTop="10dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000000"></TextView>
            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1 new message"
                android:textSize="18dp"
                android:textColor="#ECA320"
                android:textStyle="bold"
                android:paddingTop="5dp"
                ></TextView>
        </LinearLayout>
        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_right"
            android:layout_toRightOf="@id/MakennaLinearLayout"
            ></ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/parentRelative3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/parentRelative2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <ImageView
            android:id="@+id/image2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/sunflower_profile_modified"
            ></ImageView>
        <LinearLayout
            android:id="@+id/MiraclePhilips"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_toRightOf="@id/image2"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Miracle Philips"
                android:paddingTop="10dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000000"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1 new message"
                android:textSize="18dp"
                android:textColor="#ECA320"
                android:textStyle="bold"
                android:paddingTop="5dp"
                ></TextView>
        </LinearLayout>
        <ImageView
            android:id="@+id/arrow2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_right"
            android:layout_toRightOf="@id/MiraclePhilips"
            ></ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/parentRelative4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/parentRelative3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <ImageView
            android:id="@+id/image3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/saad_salman_modified"
            ></ImageView>
        <LinearLayout
            android:id="@+id/ZaireGouse"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_toRightOf="@id/image3"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Zaire Gouse"
                android:paddingTop="10dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000000"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="No new messages"
                android:textSize="18dp"
                android:textColor="#AFA5A5"
                android:textStyle="bold"
                android:paddingTop="5dp"
                ></TextView>
        </LinearLayout>
        <ImageView
            android:id="@+id/arrow3"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_right"
            android:layout_toRightOf="@id/ZaireGouse"
            ></ImageView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:weightSum="5"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/homebtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/home_black"
                android:clickable="true"
                android:onClick="homeClickButton"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Home"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/searchtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/search"
                android:clickable="true"
                android:onClick="searchClickButton"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Search"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            >
            <ImageView
                android:id="@+id/plusbtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="PlusButton"
                android:src="@drawable/add_circle" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/chatbtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="ChatButton"
                android:src="@drawable/chat_orange" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Chat"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/profilebtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="20dp"
                android:src="@drawable/user" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Profile"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                ></TextView>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider"
        android:layout_below="@id/parentRelative2"></TextView>

    <TextView
        android:id="@+id/divider_three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider"
        android:layout_below="@id/parentRelative3"></TextView>


</RelativeLayout>