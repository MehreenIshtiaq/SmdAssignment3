<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResults"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="10">


        <ImageView
            android:id="@+id/back"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="goBack"
            android:src="@drawable/back_arrow"
            >

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="Mehreen Ishtiaq"
            android:textColor="@color/gray"
            android:textSize="26sp"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginLeft="80dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView

                android:id="@+id/voiceCall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/phone"
                android:layout_marginRight="20dp"
                >

            </ImageView>

            <ImageView

                android:id="@+id/videoCall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/videocam"
                >

            </ImageView>

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray"
        android:layout_alignBottom="@id/box1"
        >

    </View>

    <RelativeLayout

        android:id="@+id/some"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/line1"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="50dp"

        >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/openChatRV">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/light_gray">

        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Write a reply...">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:id="@+id/photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"

                android:src="@drawable/photoo"
                >

            </ImageView>

            <ImageView

                android:id="@+id/gallery"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/photo"
                android:src="@drawable/galleryy"
                android:layout_marginHorizontal="5dp"
                >

            </ImageView>

            <ImageView

                android:id="@+id/file"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/gallery"
                android:src="@drawable/file"
                android:layout_marginHorizontal="5dp"
                >

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Send"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:layout_marginHorizontal="5dp"
                >

            </TextView>


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>