<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailVerification"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="15dp">


        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/close">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/back"
            android:gravity="center_vertical"
            android:text="Item"
            android:textColor="@color/gray"
            android:textSize="26sp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray"
        android:layout_alignBottom="@id/box1">

    </View>

    <LinearLayout
        android:id="@+id/iconsRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="2">

        <LinearLayout

            android:id="@+id/uploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_dotted_border"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="40dp"
            android:paddingVertical="10dp"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/uploadPicture"
                android:layout_width="53dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"

                android:src="@drawable/picture"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Upload Image"
                android:id="@+id/uploadText"
                android:textColor="@color/orange"
                android:textSize="12sp"
                android:visibility="visible" />

        </LinearLayout>


        <LinearLayout

            android:id="@+id/uploadVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_dotted_border"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="40dp"
            android:paddingVertical="10dp"
            >

            <VideoView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:id="@+id/uploadVideoView"
                android:src="@drawable/orange_videocam"
                android:onClick="openVideoChooser"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Upload Video"
                android:textColor="@color/orange"
                android:textSize="12sp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconsRow"
        android:layout_above="@+id/postItem"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:padding="15dp">


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/enter_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignTop="@+id/name"
                android:layout_marginTop="40dp"
                android:hint="Enter item name"
                android:paddingLeft="20dp"
                android:textSize="24sp"
                android:background="@drawable/rounded_corners"
                android:gravity="center_vertical"
                >

            </EditText>

            <TextView
                android:id="@+id/email2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/name"
                android:textColor="@color/black"
                android:layout_marginTop="100dp"
                android:text="Hourly Rate"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/enter_email2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignTop="@+id/email2"
                android:layout_marginTop="40dp"
                android:hint="Enter hourly rate"
                android:paddingLeft="20dp"
                android:textSize="24sp"
                android:background="@drawable/rounded_corners"
                android:gravity="center_vertical"
                >

            </EditText>

            <TextView
                android:id="@+id/contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/email2"
                android:textColor="@color/black"
                android:layout_marginTop="100dp"
                android:text="Description"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/enter_contact_number"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/contact_number"
                android:layout_marginTop="40dp"
                android:hint="Enter description"
                android:paddingLeft="20dp"
                android:textSize="24sp"
                android:background="@drawable/rounded_corners"
                android:gravity="center_vertical"
                >

            </EditText>

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/enter_contact_number"
                android:textColor="@color/black"
                android:layout_marginTop="100dp"
                android:text="City"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_corners"
                android:layout_alignTop="@+id/city"
                android:layout_marginTop="40dp"/>
            <Spinner

                android:id="@+id/citySpinner"
                android:layout_alignTop="@+id/city"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:spinnerMode="dropdown"
                android:paddingLeft="20dp"
                android:entries="@array/cities">

            </Spinner>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/postItem"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Post Item"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corners_orange"
        android:layout_marginHorizontal="15dp">
    </Button>

</RelativeLayout>
